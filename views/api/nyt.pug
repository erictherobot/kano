extends ../layout

block content
  #hero-page.jumbotron.text-center.abel
    .container
      h1.hero-text.animated.fadeInDown
        i.fa.fa-building-o
        | New York Times API
    br
  .container
    .row
    .btn-group.btn-group-justified
      a.btn.btn-kano-invert(href='http://developer.nytimes.com/page', target='_blank')
        i.fa.fa-check-square-o
        | Overview
      a.btn.btn-kano-invert(href='http://prototype.nytimes.com/gst/apitool/index.html', target='_blank')
        i.fa.fa-laptop
        | API Console
      a.btn.btn-kano-invert(href='http://developer.nytimes.com/docs', target='_blank')
        i.fa.fa-code-fork
        | API Endspoints

    h4 Young Adult Best Sellers
    table.table.table-striped.table-bordered
      thead
        tr
          th Rank
          th Title
          th.hidden-xs Description
          th Author
          th.hidden-xs ISBN-13
      tbody
        for book in books
          tr
            td= book.rank
            td= book.book_details[0].title
            td.hidden-xs= book.book_details[0].description
            td= book.book_details[0].author
            td.hidden-xs= book.book_details[0].primary_isbn13