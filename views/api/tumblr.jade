extends ../layout

block content
  #hero-page.jumbotron.text-center.abel
    .container
      h1.hero-text.animated.fadeInDown
        i.fa.fa-tumblr-square
        | Tumblr API
    br
  .container
    .row
    .btn-group.btn-group-justified
      a.btn.btn-kano-invert(href='http://www.tumblr.com/docs/en/api/v2#overview', target='_blank')
        i.fa.fa-check-square-o
        | Overview
      a.btn.btn-kano-invert(href='https://api.tumblr.com/console', target='_blank')
        i.fa.fa-laptop
        | API Console
      a.btn.btn-kano-invert(href='http://www.tumblr.com/docs/en/api/v2#blog_methods', target='_blank')
        i.fa.fa-code-fork
        | API Endpoints

    h3.text-primary #{blog.name}'s blog
    .btn.btn-xs.btn-kano-invert
      i.fa.fa-file-text-o
      | #{blog.posts} posts
    h4 Latest Photo Post
    for photo in photoset
      img.item(src='#{photo.original_size.url}')