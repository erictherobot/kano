extends ../layout

block content
  #hero-page.jumbotron.text-center.abel
    .container
      h1.hero-text.animated.fadeInDown
        | Change Password
    br
  .container
    .row
      .page-header
        h3 Change Password
      include ../partials/flash
        form.form-horizontal(action='/dashboard/change-password', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group
            label.col-sm-2.control-label(for='password') New Password
            .col-sm-4
              input.form-control(type='password', name='password', id='password')
          .form-group
            label.col-sm-2.control-label(for='confirmPassword') Confirm Password
            .col-sm-4
              input.form-control(type='password', name='confirmPassword', id='confirmPassword')
          .form-group
            .col-sm-offset-2.col-sm-4
              button.btn.btn-kano-invert(type='submit')
                i.fa.fa-keyboard-o
                | Change Password
